<UserControl x:Class="WorkTimeStat.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorkTimeStat.Controls"
             xmlns:xce="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:Converter="clr-namespace:WorkTimeStat.Enums.Converters"
             xmlns:loc = "clr-namespace:WorkTimeStat.Properties"
             d:DataContext="{d:DesignInstance Type=local:CalendarControl}"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="470"
             Background="#FF434343" Foreground="White" FontSize="14">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Converter:EnumNameConverter x:Key="enumNameConverter" />
    </UserControl.Resources>
    
    <Border Margin="5"
            BorderThickness="1"
            BorderBrush="Wheat"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
        <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="5"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="chosenDateLabel" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1" 
               HorizontalAlignment="Center"/>

            <Viewbox Grid.Column="1" Grid.Row="1" Grid.RowSpan="15">
                <Calendar x:Name="mainCalendar"  
                      VerticalAlignment="Center" HorizontalAlignment="Stretch"
                      FontWeight="Bold" FontSize="20" Foreground="White" Background="#FFC9C9C9" 
                      SelectedDatesChanged="MainCalendar_SelectedDatesChanged"
                      PreviewMouseUp="Calendar_PreviewMouseUp"/>
            </Viewbox>

            <Label Content="{x:Static loc:Resources.cal_sick_pay}" Grid.Column="3" Grid.Row="3"/>
            <Label Content="{x:Static loc:Resources.cal_leave_day}" Grid.Column="3" Grid.Row="5"/>
            <Label Content="{x:Static loc:Resources.u_work_start_time}" Grid.Column="3" Grid.Row="7"/>
            <Label Content="{x:Static loc:Resources.u_work_end_time}" Grid.Column="3" Grid.Row="9"/>
            <Label Content="{x:Static loc:Resources.u_lunch_break_length}" Grid.Column="3" Grid.Row="11"/>
            <Label Content="{x:Static loc:Resources.u_other_break_length}" Grid.Column="3" Grid.Row="13"/>
            <Label Content="{x:Static loc:Resources.u_overwork_length}" Grid.Column="3" Grid.Row="15"/>
            <Label Content="{x:Static loc:Resources.u_workday_type}" Grid.Column="3" Grid.Row="17"/>
            <Label Content="{x:Static loc:Resources.u_workplace}" Grid.Column="3" Grid.Row="19"/>
            <Label Content="{x:Static loc:Resources.cal_worked_hours}" Grid.Column="3" Grid.Row="21"/>
            <Label Content="{x:Static loc:Resources.cal_measured_hours}" Grid.Column="3" Grid.Row="23"/>

            <CheckBox x:Name="sickDayChkbox" Grid.Column="5" Grid.Row="3" 
                  VerticalAlignment="Center" HorizontalAlignment="Left"
                  PreviewMouseDown="SickDayChkbox_MouseDown" Click="SickDayChkbox_Click"/>

            <CheckBox x:Name="leaveDayChkbox" Grid.Column="5" Grid.Row="5" 
                  VerticalAlignment="Center" HorizontalAlignment="Left" 
                  PreviewMouseDown="LeaveDayChkbox_MouseDown" Click="LeaveDayChkbox_Click"/>

            <Separator Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6"/>

            <!-- Read-only labels -->
            <Label x:Name="startTimeValue" Grid.Column="5" Grid.Row="7"/>
            <Label x:Name="endTimeValue" Grid.Column="5" Grid.Row="9"/>
            <Label x:Name="lunchBreakTimeValue" Grid.Column="5" Grid.Row="11"/>
            <Label x:Name="otherBreakTimeValue" Grid.Column="5" Grid.Row="13"/>
            <Label x:Name="overWorkTimeValue" Grid.Column="5" Grid.Row="15"/>
            <Label x:Name="WorkTypeValue" Grid.Column="5" Grid.Row="17"/>
            <Label x:Name="WorkPlaceValue" Grid.Column="5" Grid.Row="19"/>

            <!-- Edit controls -->
            <StackPanel x:Name="WorkStartPanel" Grid.Row="7" Grid.Column="5" Orientation="Horizontal" Visibility="Collapsed">
                <xce:IntegerUpDown x:Name="WorkStartHour"
                               Minimum="6" Maximum="16" ClipValueToMinMax="True" Increment="1"
                               Background="#FF434343" Foreground="White"/>
                <xce:IntegerUpDown x:Name="WorkStartMinute"
                               Minimum="0" Maximum="45" ClipValueToMinMax="True" Increment="15"
                               Background="#FF434343" Foreground="White"/>
            </StackPanel>

            <StackPanel x:Name="WorkEndPanel" Grid.Row="9" Grid.Column="5" Orientation="Horizontal"  Visibility="Collapsed">
                <xce:IntegerUpDown x:Name="WorkEndHour" 
                               Minimum="10" Maximum="23" ClipValueToMinMax="True" Increment="1"
                               Background="#FF434343" Foreground="White"/>
                <xce:IntegerUpDown x:Name="WorkEndMinute"
                               Minimum="0" Maximum="45" ClipValueToMinMax="True" Increment="15"
                               Background="#FF434343" Foreground="White"/>
            </StackPanel>

            <xce:IntegerUpDown x:Name="EditWorkLaunchTime"
                               Minimum="0" Maximum="60" ClipValueToMinMax="True" Increment="15"
                               Grid.Row="11" Grid.Column="5" 
                               Background="#FF434343" Foreground="White"
                               Visibility="Collapsed"/>

            <xce:IntegerUpDown x:Name="EditWorkbreakTime"
                               Minimum="0" Maximum="480" ClipValueToMinMax="True" Increment="15"
                               Grid.Row="13" Grid.Column="5"
                               Background="#FF434343" Foreground="White"
                               Visibility="Collapsed"/>

            <xce:IntegerUpDown x:Name="EditNonworkTime" 
                               Minimum="0" Maximum="480" ClipValueToMinMax="True" Increment="15"
                               Grid.Row="15" Grid.Column="5" 
                               Background="#FF434343" Foreground="White"
                               Visibility="Collapsed"/>

            <ComboBox x:Name="EditWorkType"
                               Grid.Row="17" Grid.Column="5" 
                               Background="#FF434343" Foreground="Black"
                               SelectionChanged="WorkType_SelectionChanged"
                               Visibility="Collapsed">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource enumNameConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <ComboBox x:Name="EditWorkPlace"
                               Grid.Row="19" Grid.Column="5" 
                               Background="#FF434343" Foreground="Black"
                               SelectionChanged="WorkPlace_SelectionChanged"
                               Visibility="Collapsed">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource enumNameConverter}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Read-only labels -->
            <Separator Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="20"/>

            <Label x:Name="workedTimeValue" Grid.Column="5" Grid.Row="21" FontWeight="Bold"/>
            <Label x:Name="watchedTimeValue" Grid.Column="5" Grid.Row="23" FontWeight="Bold"/>

            <!-- Edit controls -->
            <DockPanel x:Name="EditPanel" Grid.Column="1" Grid.Row="21" LastChildFill="False" Visibility="Collapsed">
                <Button x:Name="SaveBtn" Content="{x:Static loc:Resources.u_btn_save}"
                    DockPanel.Dock="Left" Padding="20 0 20 0"
                    Click="SaveBtn_Click"/>
                <Button x:Name="CancelBtn" Content="{x:Static loc:Resources.u_btn_cancel}"
                    DockPanel.Dock="Right" Padding="20 0 20 0"
                    Click="CancelBtn_Click"/>
            </DockPanel>

            <Button x:Name="DeleteBtn" Content="{x:Static loc:Resources.cal_btn_delete}" Grid.Column="1" Grid.Row="19"
                    Click="DeleteBtn_Click"/>
            
            <Button x:Name="EditBtn" Content="{x:Static loc:Resources.cal_btn_change}" Grid.Column="1" Grid.Row="21"
                    Click="EditBtn_Click"/>

            <Button x:Name="ExitBtn" Content="{x:Static loc:Resources.u_btn_close}" Grid.Column="1" Grid.Row="23"
                    Click="ExitBtn_Click"/>
        </Grid>
    </Border>
</UserControl>
